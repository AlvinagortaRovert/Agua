<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro1">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="389dp"
        android:layout_height="688dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="533dp"
            android:orientation="vertical">


            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/rtextView7"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="REGISTRAR USUARIO"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#080A10"
                android:textSize="14sp"
                android:textStyle="normal|bold" />

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="220dp"
                android:layout_height="72dp"
                android:layout_gravity="center|center_vertical"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:gravity="center|top|center_vertical"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="2dp"
                app:boxCornerRadiusBottomStart="2dp"
                app:boxCornerRadiusTopEnd="2dp"
                app:boxCornerRadiusTopStart="2dp"
                app:counterMaxLength="100"
                app:endIconMode="clear_text"
                app:helperText="ingrese su dni">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contenidodni"
                    android:layout_width="218dp"
                    android:layout_height="48dp"
                    android:focusable="auto"
                    android:focusableInTouchMode="true"
                    android:inputType="number|text"
                    android:textSize="10sp"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <!--
            <EditText
                android:id="@+id/redtDNI"
                android:layout_width="277dp"
                android:layout_height="70dp"

                android:layout_gravity="center|center_vertical"


                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:focusable="auto"
                android:focusableInTouchMode="true"
                android:hint="Ingrese su DNI"
                android:inputType="number"
                android:minHeight="48dp"

                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />
-->
            <EditText
                android:id="@+id/redtnombre"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:hint="Ingrese su nombre"
                android:inputType="text"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColorHint="#757575"
                android:textSize="12sp">

            </EditText>

            <EditText
                android:id="@+id/redtapellido"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:hint="Ingrese su apellidos"
                android:inputType="text"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColorHint="#757575"
                android:textSize="12sp">

            </EditText>

            <EditText
                android:id="@+id/redemail"
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:hint="Ingrese su correo"
                android:inputType="text|textEmailAddress"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColorHint="#757575"
                android:textSize="12sp">

            </EditText>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/redpasw1"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:hint="Ingrese su contraseña"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColorHint="#757575"
                android:textSize="12sp">

            </EditText>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/redpasw2"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:hint="Repita su contraseña"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColorHint="#757575"
                android:textSize="12sp">

            </EditText>


            <Space
                android:layout_width="match_parent"
                android:layout_height="31dp" />

            <LinearLayout
                android:layout_width="329dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Space
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/atvitexmolestias"
                    android:layout_width="81dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:backgroundTint="#070707"
                    android:text="Género :"
                    android:textColor="#070707"
                    android:textSize="10sp"
                    android:textStyle="bold" />


                <RadioGroup
                    android:id="@+id/opciones_sexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_masculino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="36dp"
                        android:checked="true"
                        android:text="M"
                        android:textSize="10sp" />

                    <RadioButton
                        android:id="@+id/radio_femenino"
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="F"
                        android:textSize="10sp" />

                    <RadioButton
                        android:id="@+id/radio_nodef"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="No def"
                        android:textSize="10sp" />
                </RadioGroup>


                <Space
                    android:layout_width="41dp"
                    android:layout_height="34dp"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="263dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/rbtnreg2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnredondo"
                    android:drawableLeft="@android:drawable/ic_menu_add"
                    android:gravity="center"
                    android:text="Registrarse" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pastel1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


    </RelativeLayout>


</LinearLayout>